{
  "version": "0.1.2",
  "license": "MIT",
  "main": "index.js",
  "description": "The easy way to manger all react overlays, like modal, toast",
  "homepage": "https://relaxgo.github.io/react-overlay",
  "repository": "github:relaxgo/react-overlay",
  "typings": "index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "rollup -c -w --bundleConfigAsCjs",
    "build": "rollup -c --bundleConfigAsCjs",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepare": "husky"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "name": "@react-overlay/overlays",
  "author": "relaxgo",
  "module": "react-overlay.esm.js",
  "size-limit": [
    {
      "path": "dist/overlays.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/overlays.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.3",
    "husky": "^9.0.11",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "rollup": "^4.18.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^11.1.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  }
}
