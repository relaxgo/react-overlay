{
  "version": "0.1.2",
  "license": "MIT",
  "main": "index.js",
  "description": "The easy way to manger all react overlays, like modal, toast",
  "homepage": "https://relaxgo.github.io/react-overlay",
  "repository": "github:relaxgo/react-overlay",
  "typings": "index.d.ts",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@react-overlay/overlays",
  "author": "relaxgo",
  "module": "react-overlay.esm.js",
  "size-limit": [
    {
      "path": "dist/overlays.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/overlays.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.9",
    "husky": "^8.0.1",
    "postcss": "^8.4.14",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2"
  }
}
